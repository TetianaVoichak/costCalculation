<Window x:Class="costСalculation.View.Window_add_category"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:costСalculation"
        mc:Ignorable="d"
        Title="New category" Height="320" Width="400" Background="#EDF8F1" WindowStyle="ToolWindow" Closing="Window_Closing" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <Grid Background="#EDF8F1" >
        <TextBox x:Name="textBox_new_category" Height="35" Margin="34,89,30,0" TextWrapping="Wrap" VerticalAlignment="Top"/>
        <Label Content="Input new category" Height="35" HorizontalAlignment="Left" Margin="31,10,0,0" VerticalAlignment="Top" />
        <Button x:Name="button_save_new"  Content="Save" Margin="34,135,30,0" VerticalAlignment="Top" Height="35" Click="button_save_new_Click" Background="#D5EBDD"/>
        <ComboBox x:Name="comboBoxList" Margin="34,41,30,0" VerticalAlignment="Top" SelectedIndex="0" Height="35" />
        <Button x:Name="button_delete" Content="Delete" Margin="34,236,30,0" VerticalAlignment="Top"  Height="35" Click="button_delete_Click" Background="#D5EBDD"/>
        <Button x:Name="buttonEdit" Content="Edit" Margin="34,186,30,0" VerticalAlignment="Top" Height="35" Click="buttonEdit_Click" Background="#D5EBDD"/>
    </Grid>
</Window>
