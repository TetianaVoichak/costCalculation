<Window x:Class="costСalculation.View.CustomMessageBox"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:costСalculation"
        mc:Ignorable="d"
        WindowStyle="ToolWindow"
        Height="150" Width="200" Background="#EDF8F1" WindowStartupLocation="CenterScreen" ResizeMode="NoResize">
    <StackPanel>
        <TextBlock x:Name="txtMessage" HorizontalAlignment="Center" Margin="10" TextWrapping="Wrap" FontSize="14"/>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
            <Button Content="Yes" Click="Yes_Click" Margin="5" Padding="10,2" MinWidth="60" />
            <Button Content="No" Click="No_Click" Margin="5" Padding="10,2" MinWidth="60"/>
        </StackPanel>
    </StackPanel>
</Window>
